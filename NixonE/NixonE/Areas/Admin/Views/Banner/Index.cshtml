@model Banner
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-6 h3 mb-4 text-gray-800">
        <h1>Settings</h1>
    </div>
    <div class="col-lg-12">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <td>
                        Banner
                    </td>
                    <td>
                        @Model.Content
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Banner" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

</div>

