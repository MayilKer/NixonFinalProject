@model MainHero
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-2 h3 mb-4 text-gray-800">
        <h1>Main Hero</h1>
    </div>
    <div class="col-lg-2 h3 mb-4 text-gray-800">
        <a asp-controller="MainHero" asp-action="Update" asp-route-id="@Model?.Id" asp-area="Admin" class="btn btn-warning">Update</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 tagTable">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <td>Title</td>
                    <td>@Model?.Title</td>
                </tr>
                <tr>
                    <td>Content</td>
                    <td>@Model?.Content</td>
                </tr>
                <tr>
                    <td>Hero-Web</td>
                    <td><img src="~/dist/images/MainHero/@Model?.HeroImgWeb" alt="Alternate Text" style="width:50%" /></td>
                </tr>
                <tr>
                    <td>Hero-Mob</td>
                    <td><img src="~/dist/images/MainHero/@Model?.HeroImgMob" alt="Alternate Text" style="width:50%" /></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
