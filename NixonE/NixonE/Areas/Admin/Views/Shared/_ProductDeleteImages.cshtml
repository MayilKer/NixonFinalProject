@model IEnumerable<ProductImages>
    @if (Model != null)
    {
        @foreach (ProductImages productImage in Model.Where(pi => !pi.IsDeleted))
        {
            <div class="col-lg-2">
                <img style="width:50%" src="~/dist/images/products/@productImage.Image" alt="Alternate Text" />
                <a class="btn btn-danger" id="deleteImage" asp-action="DeleteImage" asp-route-id="@productImage.Id">Delete Image</a>
            </div>
        }
    }